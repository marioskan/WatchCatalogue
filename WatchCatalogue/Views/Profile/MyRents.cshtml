@model IEnumerable<WatchCatalogue.Core.ViewModels.RentInfoViewModel>
@{
    ViewBag.Title = "MyRents";
}

<h2>MyRents</h2>

<table id="data" >
    <tr>
        <th>Subscription Service</th>
        <th>Channel</th>
        <th>Movie</th>
        <th>Date Rented</th>
        <th>Price</th>
    </tr>
    @foreach(var vm in Model)
    {
        <tr>
            <td>@vm.SubscriptionName</td>
            <td>@vm.ChannelName</td>
            <td>@vm.MovieName</td>
            <td>@vm.RentDate</td>
            <td>@vm.Price</td>
        </tr>
    }
</table>
<style>
    #data {
        font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        font-size: 12px;
    }

    table {
        width: 100%;
    }

    #data td, #data th {
        border: 1px solid #ddd;
        padding: 8px;
        border: 1px solid #000;
    }

    #data tr {
        width: 1%;
        white-space: nowrap;
    }

    #data th {
        padding-top: 12px;
        padding-bottom: 12px;
        text-align: left;
        background-color: #4CAF50;
        color: white;
    }
</style>