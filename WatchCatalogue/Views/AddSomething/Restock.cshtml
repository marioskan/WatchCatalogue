@model IEnumerable<WatchCatalogue.Core.Entities.Movie>
@{
    ViewBag.Title = "Restock";
}

@using (Html.BeginForm("RestockPost", "AddSomething", FormMethod.Post))
{
    <form>
        <table>
            <tr>
                <td>
                    Movie Name (Available/Total) :
                </td>
            </tr>
            <tr>
                <td>
                    <select name="select">
                        @foreach (var movie in Model)
                        {
                            <option value="@movie.ID">@movie.Name (@movie.AvailableAmount/@movie.Amount)</option>
                        }
                    </select>
                </td>
            </tr>
            <tr>
                <td>
                    Add amount:
                </td>
            </tr>
            <tr>
                <td>
                    <input type="number" name="newamount"/>
                </td>
            </tr>
            <tr>
                <td>
                    <input type="submit" value="Update"/>
                </td>
            </tr>
        </table>
    </form>
}

